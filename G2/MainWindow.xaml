<Window x:Class="G2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:G2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="mainGrid">
        <TextBlock x:Name="lable" HorizontalAlignment="Left" Margin="10,10,0,0" Text="Please input a number:" VerticalAlignment="Top"/>
        <TextBox x:Name="numberInput" HorizontalAlignment="Left" Margin="10,31,0,0" VerticalAlignment="Top" Width="190" PreviewTextInput="numberValidation"/>
        <Button Content="Generate" Click="generateClick" HorizontalAlignment="Left" Margin="223,30,0,0" VerticalAlignment="Top"/>
        <Canvas x:Name="ellipsesCanvas" Margin="10,65,10,10"/>

    </Grid>
</Window>
